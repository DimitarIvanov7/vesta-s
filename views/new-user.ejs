<body>
    <h1 class="main-title">Контролен панел</h1>
    <div class="control-btns">
        <button onclick="javascript:history.back()">Апартаменти</button>
        <button onclick="window.location='/new-user'">Потребители</button>
        <button>Статии</button>
    </div>
    <section class="main-logged">
        <div class="container-users">
            <form class="add-new" action="/new-user" method="POST">
                <h1>Въведи нов Администратор</h1>
                <label for="name">Име:</label>
                <input type="text" name="name" id="name" required>
                <label for="password">Парола:</label>
                <input type="text" name="password" id="password" required>
                <button type="submit">Въведи</button>
            </form>
            <!-- <%let addedUser = false %>
            <%if(addedUser){ %>
                <%alert("Въведен потребител")%>
            <%}%> -->
        </div>
    </section>

    <script src="/javascript/new-user.js">
    </script>
    
</body>
</html>